#edit_person
  = form_tag person_path(@person), :method => :put do
    .leftform
      %br/
      = label :person, :first_name, 'First Name'
      &nbsp;&nbsp;
      %br/
      %br/
      = label :person, :last_name, 'Last Name'
      &nbsp;&nbsp;
      %br/
      %br/
      = label :person, :progress, 'Progress'
      &nbsp;&nbsp;
      %br/
      %br/
      = label :person, :favorite, 'Favorite'
      &nbsp;&nbsp;
    .rightform
      .small_link#delete= link_to 'Delete Person', person_path(@person), :method => :delete, :confirm => 'Are you sure?'
      %br/
      = text_field :person, 'first_name'
      %br/
      %br/
      = text_field :person, 'last_name'
      %br/
      %br/
      = select :person, 'progress', [['None', '0'], ['Aware', '1'], ['Interested', '2'], ['Trying', '3'], ['Adopted', '4']]
      %br/
      %br/
      = check_box :person, 'favorite' 
      %br/
      %br/
      = submit_tag 'Update'

